{
  "name": "almond.css",
  "version": "2.0.0",
  "description": "Collection of CSS styles to make simple websites look nicer.",
  "main": "dist/almond.css",
  "scripts": {
    "build": "npm run build:raw && npm run build:min && npm run build:lite",
    "build:raw": "sass --no-source-map src/index.scss dist/almond.css",
    "build:min": "sass --no-source-map --style compressed src/index.scss dist/almond.min.css",
    "build:lite": "npm run build:lite:raw && npm run build:lite:min",
    "build:lite:raw": "sass --no-source-map src/index.lite.scss dist/almond.lite.css",
    "build:lite:min": "sass --no-source-map --style compressed src/index.lite.scss dist/almond.lite.min.css",
    "test": "cypress run",
    "test:open": "cypress open",
    "watch": "sass -w src/index.scss dist/almond.css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alvaromontoro/almond.css"
  },
  "keywords": [
    "css",
    "class-less",
    "styles"
  ],
  "author": "Alvaro Montoro <alvaromontoro@gmail.com> (https://alvaromontoro.com)",
  "license": "GNU General Public License v3.0",
  "bugs": {
    "url": "https://github.com/alvaromontoro/almond.css/issues"
  },
  "homepage": "https://github.com/alvaromontoro/almond.css",
  "devDependencies": {
    "cypress": "^9.2.0",
    "sass": "^1.49.9"
  }
}
